PRO Fix_t, arg;; NEW VERSION WITH BUG FIXED; (WMN 3/26/03);; Check if argument is a structure;type = TypeOF(arg)IF(type NE 8) THEN BEGIN	MESSAGE, 'argument is not a structure', /informational	RETURNENDIF;; get values of 'time';arg.t -> Get, Values=tptr, Units=tUnitstValues = *tptrtmin = MIN(tValues, MAX=tmax);; now fix time grid for ALL objects in arg;nTags = N_TAGS(arg)FOR i=0,nTags-1 DO BEGIN	type = TypeOf(arg.(i))	IF(type EQ 11) THEN arg.(i) -> Set, 	axis='time', gridValues=PTR_NEW(tValues),	$						gridUnits=tUnits, gridName='t',			$						gridMnemonic='t', range=[tmin,tmax]ENDFORRETURNEND ; **********  Fix_t ********** ;